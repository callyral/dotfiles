# . notes .
#  abbreviations are stored in $XDG_CONFIG_HOME/zsh-abbr/zsh-abbreviations
SU='doas' # sudo or doas (used in abbreviations)


# . load plugins .
source ${ZDOTDIR:-~}/.antidote/antidote.zsh
antidote load


# . completion styling (modified compinstall) .
zstyle ':completion:*' completer _expand _complete _ignored _approximate
zstyle :compinstall filename '${ZDOTDIR:-~}/.zshrc'

zstyle ':completion:*' menu select
autoload -Uz compinit
compinit


# . keybinds .
bindkey -v


# . plugin configuration .
# * prompt
#  git prompt setup
autoload -Uz add-zsh-hook vcs_info
setopt prompt_subst
add-zsh-hook precmd vcs_info # run vcs_info before prompt is displayed
#   checking for changes
zstyle ':vcs_info:*' check-for-changes true
zstyle ':vcs_info:*' unstagedstr       '%F{red}*%F{yellow}'   # %u
zstyle ':vcs_info:*' stagedstr         '%F{green}+%F{yellow}' # %c
#   formatting (%b -> branch)
zstyle ':vcs_info:git:*' formats       '(%b%u%c)'
zstyle ':vcs_info:git:*' actionformats '(%b|%a%u%c)'
#  prompt
PROMPT=' %F{red}@%n %F{green}%~ %F{blue}%% %f'
RPROMPT='%F{yellow}${vcs_info_msg_0_}%f'


# . aliases .
#  ls
alias l='eza -la'
alias ll='eza -lah'
alias ls='eza -a'
#  cd
alias ..="cd .."
alias ...="cd ../../"
#  other
alias lowfetchc="lowfetch -kbc b -oa" # lowfetch configured


# . history .
#  see more options in zshenv
setopt HIST_IGNORE_ALL_DUPS
setopt histignorealldups
setopt INC_APPEND_HISTORY

# . startup .
lowfetchc
