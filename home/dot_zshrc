# Plugin management
source ${ZDOTDIR:-~}/.antidote/antidote.zsh

# Startup commands
kittyfetch

# The following lines were added by compinstall
zstyle ':completion:*' completer _expand _complete _ignored _approximate
zstyle :compinstall filename '~/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

bindkey -v

# Plugins in .zsh_plugins.txt
antidote load

# Oh My ZSH 
ZSH_THEME="mh"

# Aliases
#  xbps (void)
#   xbps package install
alias xpi='sudo xbps-install'
#   xbps package remove
alias xpr='sudo xbps-remove'
alias purge='sudo xbps-remove -R'
#   xbps package find
alias xpf='xbps-query -Rs'
#   xbps package look
alias xpl='xbps-query -s'
alias upd='xbps-install -Su'
#  ls
alias ls='eza -a'
alias l='eza -la'
alias ll='eza -lah'
#  other
alias wipe='rm ~/.zsh_history; clear'

# Other useful things
#  Adds colorful "help" command
help() {
    "$@" --help 2>&1 | bat --plain --language=help 
}
